<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filters"
    android:layout_width="@dimen/filters_width"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="#FFF"
    android:orientation="vertical" >

    <TextView
        android:text="@string/filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/balance_textSize"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <CheckBox
        android:clickable="true"
        android:id="@+id/filter0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:gravity="start"
        android:text="@string/amphibian"
        android:textSize="@dimen/filter_textSize"/>

    <CheckBox
        android:clickable="true"
        android:id="@+id/filter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:gravity="start"
        android:text="@string/bird"
        android:textSize="@dimen/filter_textSize"/>

    <CheckBox
        android:clickable="true"
        android:id="@+id/filter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:gravity="start"
        android:text="@string/cat"
        android:textSize="@dimen/filter_textSize"/>

    <CheckBox
        android:clickable="true"
        android:id="@+id/filter3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:gravity="start"
        android:text="@string/dog"
        android:textSize="@dimen/filter_textSize"/>
    
    <CheckBox
        android:clickable="true"
        android:id="@+id/filter4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:gravity="start"
        android:text="@string/rodent"
        android:textSize="@dimen/filter_textSize"/>
    <CheckBox
        android:clickable="true"
        android:id="@+id/filter5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:gravity="start"
        android:text="@string/fish"
        android:textSize="@dimen/filter_textSize"/>

    <TextView
        android:text="@string/total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/filter_textSize"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="75dp"
            android:id="@+id/min_filter"
            android:textSize="@dimen/filter_textSize"
            android:background="@drawable/external_login_button_backgroud"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:inputType="numberDecimal" />

        <TextView
            android:text=" â€” "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/filter_textSize"
            tools:ignore="HardcodedText" />

        <EditText
            android:inputType="numberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="75dp"
            android:id="@+id/max_filter"
            android:textSize="@dimen/filter_textSize"
            android:background="@drawable/external_login_button_backgroud"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

    <TextView
        android:id="@+id/apply_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/enter_button"
        android:text="@string/apply"
        android:gravity="center"
        android:textSize="25dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

</LinearLayout>
