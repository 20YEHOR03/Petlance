<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin">
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile"
                    android:contentDescription="description" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/edit"
                    android:id="@+id/edit_avatar"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/enter_button"
                    android:padding="5dp"
                    android:contentDescription="description" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <LinearLayout
                android:id="@+id/rating_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_rating"
                    android:textSize="@dimen/abc_text_size_headline_material"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:id="@+id/rating"
                    android:isIndicator="true"/>
                </LinearLayout>
            <TextView
                android:id="@+id/error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorError"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/horizontal_prompt_text_margin"
                android:text="Username"
                android:textSize="25dp"/>
            <EditText
                android:id="@+id/username"
                android:inputType="text"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/horizontal_prompt_text_margin"
                android:paddingTop="@dimen/horizontal_prompt_text_margin"
                android:background="@drawable/external_login_button_backgroud"/>
                        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/horizontal_prompt_text_margin"
                android:text="Email"
                android:textSize="25dp"/>
            <EditText
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/horizontal_prompt_text_margin"
                android:paddingTop="@dimen/horizontal_prompt_text_margin"
                android:gravity="center_horizontal"
                android:id="@+id/email"
                android:background="@drawable/external_login_button_backgroud"/>
                        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/horizontal_prompt_text_margin"
                android:text="Phone"
                android:textSize="25dp"/>
            <EditText
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/phone"
                android:paddingBottom="@dimen/horizontal_prompt_text_margin"
                android:paddingTop="@dimen/horizontal_prompt_text_margin"
                android:background="@drawable/external_login_button_backgroud"/>
            <TextView
                android:id="@+id/change_password_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change password"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/balance_textSize"
                android:background="@drawable/enter_button"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_margin="@dimen/fab_margin"
                android:layout_marginTop="@dimen/horizontal_prompt_text_margin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/document_area"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document"
                    android:textSize="25dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                    <TextView
                android:id="@+id/open_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Open"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/balance_textSize"
                android:background="@drawable/enter_button"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_margin="@dimen/fab_margin" />
            <TextView
                android:id="@+id/replace_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Replace"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/balance_textSize"
                android:background="@drawable/enter_button"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_margin="@dimen/fab_margin" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical"
                tools:ignore="UselessLeaf" />
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/edit"
        android:layout_gravity="bottom|end"
        android:background="@drawable/enter_button"
        android:padding="5dp"
        android:layout_margin="@dimen/fab_margin"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
